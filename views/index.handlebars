<div class="container main">

  {{!-- Heading Area --}}
  <div class="fixed-header">
    <div class="container"></div>
    <h1>Burger Boss</h1>
  </div>

  {{!-- ADD BURGER FORM --}}
  <h2>Add a burger</h2>
  <div class="div add-burger">
    <form class="create-form">
      <div class="form-group">
        <label for="burger">Burger Name:</label>
        <textarea id="burger" class="form-control" name="burger_name"></textarea>
      </div>
      <div class="form-row">
        <button class="btn btn-info" type="submit">Add Burger</button>
      </div>
    </form>
  </div>

  <h2>Burgers that are not devoured!</h2>

  <ul>
    {{#each burger}}
    {{#unless devoured}}
    {{> burger}}
    {{/unless}}
    {{/each}}
  </ul>

  <h2>Burgers that are devoured!</h2>

  <ul>
    {{#each burgers}}
    {{#if devoured}}
    {{> burgers}}
    {{/if}}
    {{/each}}
  </ul>